{
    "name"             : "memnuniyetsizim/readit",
    "description"      : "Simple rss reader.",
    "minimum-stability": "stable",
    "type"             : "library",
    "keywords"         : ["php", "rss", "xml", "reader"],
    "homepage"         : "http://r.ead.me/",

    "authors": [
        {
          "name": "Engin Vardar",
          "email": "enginvardar@gmail.com"
        },
        {
          "name": "Mehmet Ali Ergut",
          "email": "mim@taximact.com"
        },
        {
          "name": "Mustafa Velioglu",
          "email": "me@mustafavelioglu.com"
        }
    ],

    "support": {
        "issues": "https://bitbucket.org/memnuniyetsizim/readit/issues",
        "source": "https://bitbucket.org/memnuniyetsizim/readit"
    },

    "autoload": {
        "psr-4": {
            "App\\": "app/src",
            "FeedAdaptor\\": "feedadaptor"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "App\\": "app/src",
            "FeedAdapter\\": "feedadapter"
        }
    },

    "require": {
        "php": ">=5.4",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "slim/slim": "^3.0@beta",
        "slim/twig-view": "^1.1",
        "slim/flash": "dev-master",
        "swiftmailer/swiftmailer": "~5.0",
        "psr/log": "~1.0",
        "monolog/monolog": "^1.13"
    },

    "require-dev": {
        "phpunit/phpunit": "~4.5",
        "codeception/codeception": "*",
        "phpmd/phpmd": "~2.0",
        "squizlabs/php_codesniffer": "~2.3",
        "block8/php-docblock-checker": "~1.0",
        "phploc/phploc": "~2.0"
    },

    "suggest": {
        "block8/php-docblock-checker": "PHP Docblock Checker",
        "phpmd/phpmd": "PHP Mess Detector",
        "sebastian/phpcpd": "PHP Copy/Paste Detector",
        "squizlabs/php_codesniffer": "PHP Code Sniffer",
        "phpspec/phpspec": "PHP Spec",
        "fabpot/php-cs-fixer": "PHP Code Sniffer Fixer",
        "phploc/phploc": "PHP Lines of Code"
    }
}
